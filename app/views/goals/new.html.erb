<h1>New Goal</h1>
<form action="<%= goals_url %>" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

	<label for="title">Title</label>
	<input type="text" name="goal[title]" id="title">
	<br>

	<label for="body">Body</lable>
	<textarea name="goal[body]" id="body" rows="8" cols="40"></textarea>
	<br>

	<label for="private">Private</label>
	<input type="radio" name="goal[is_private]" value="true" id="private">
	<label for="public">Public</label>
	<input type="radio" name="goal[is_private]" value="false" id="public">
	<br>

	<p><input type="submit" value="Create Goal"></p>
</form>