<!DOCTYPE html>
<html>
<head>
  <title>GoalApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
Hello, <%= current_user.username %>
<%= button_to "Sign Out", session_url, :method => :delete %>
<%= button_to "Submit a New Goal", new_goal_url, :method => :get %>
<% else %>
<%= button_to "Log In", new_session_url, :method => :get %>
<%= button_to "Sign Up", new_user_url, :method => :get %>
<% end %>

<% flash[:errors].try(:each) do |error| %>
 <%= error %>
<% end%>

<%= yield %>

</body>
</html>
